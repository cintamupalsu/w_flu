<div class="center jumbotron">
  <h1>Welcome to the Medical API</h1>
  <h2>
    This is the home page for the
    <a href="https://radiant-harbor-89014.herokuapp.com">Medical API</a> Application.
  </h2>
  <div class="row center">
    <div class="col-12">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :remember_me, class: 'checkbox inline' do %>
          <%= f.check_box :remember_me %>
          <span>この後この端末でログインが不要になります。</span>
        <% end %>
      </br>

        <%= f.submit "ログイン", class: "btn btn-lg btn-primary" %>
      <% end %>
      </br>
      <p>New user?</p>
    </div>
  </div>
  <%= link_to "申し込む", signup_path, class: "btn btn-success" %>
</div>
