<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info'%>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-9">
      
      <div class="row">
        <div class="col-3">
          <h3>日記一覧 </h3>
        </div>
        <div class="col-5 text-right">
          <%= will_paginate @feed_items, params: {controller: :freeaccess_pages, action: :home} %>
        </div>
        <div class="col-4">
          <div class="row">
            
            <div class="col-3 text-center">悲しみ</div>
            <div class="col-3 text-center">恐く</div>
            <div class="col-3 text-center">嫌い</div>
            <div class="col-3 text-center">怒る</div>
          </div>
        </div>
      </div>
      <%= render 'shared/feed'%>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Medical API</h1>
    <h2>
      This is the home page for the
      <a href="https://radiant-harbor-89014.herokuapp.com">Medical API</a> Application.
    </h2>
    <div class="row justify-content-center">
      <div class="col-7">
        <div class="card shadow">
        <div class="card-body text-left">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :remember_me, class: 'checkbox inline' do %>
            <%= f.check_box :remember_me %>
            <span>ログインしたままにする</span>
          <% end %>
        <br/>

          <%= f.submit "ログイン", class: "btn btn-lg btn-outline-primary btn-block" %>
        <% end %>
        </div>
        <div class="card-body border-top">
          <p>New user?</p>
          <%= link_to "新規登録", signup_path, class: "btn btn-outline-success btn-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>