<div class="col-md-12">
  <div class="row">
    <p id="notice"><%= notice %></p>
  </div>
  <div class="row">
    <div class="col-md-7">
      <h1>Reportsheets</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      ユーザー
    </div>
    <div class="col-7">
      コメント
    </div>
    <div class="col-3">
      操作
    </div>
  </div>
  <% @reportsheets.each do |reportsheet| %>
    <div class="row">
        <div class="col-2"><%= reportsheet.user_id %></div>
        <div class="col-7"><%= reportsheet.comment %></div>
        <div class="col-1"><%= link_to '表示', reportsheet %></div>
        <div class="col-1"><%= link_to '編集', edit_reportsheet_path(reportsheet) %></div>
        <div class="col-1"><%= link_to '削除', reportsheet, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>
  <% end %>
  
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Comment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reportsheets.each do |reportsheet| %>
        <tr>
          <td><%= reportsheet.user_id %></td>
          <td><%= reportsheet.comment %></td>
          <td><%= link_to 'Show', reportsheet %></td>
          <td><%= link_to 'Edit', edit_reportsheet_path(reportsheet) %></td>
          <td><%= link_to 'Destroy', reportsheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Reportsheet', new_reportsheet_path %>
</div>
