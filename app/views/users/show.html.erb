<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats'%>
    </section>
  </aside>
  <div class="col-md-9">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      
          <div class="row">
            <div class="col-3">
              <h3>日記 (<%= @user.microposts.count %>)</h3>
            </div>
             <div class="col-5 text-right">
               <%= will_paginate @microposts %>
            </div>
            <div class="col-4">
              <div class="row">
                <div class="col-2"></div>
                <div class="col-2">悲</div>
                <div class="col-2">喜</div>
                <div class="col-2">恐</div>
                <div class="col-2">嫌</div>
                <div class="col-2">怒</div>
              </div>
            </div>
          </div>
     
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
